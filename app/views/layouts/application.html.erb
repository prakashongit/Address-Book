<!DOCTYPE html>
<html>
<head>
  <title>AddressBook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<style>
    table, td, th {
        border: 0px solid black;
    }

    table,tr {

        width: 60%;
    }

    th {
        text-align: left;
    }
</style>
<script type="text/javascript">
    $(document).ready(function(){
        $("#panel").hide();
        $("#dropdown").mouseover(function(){
            $("#dropdown").css("background-color", "red");
        });
        $("#dropdown").mouseout(function(){
            $("#dropdown").css("background-color", "white");
        });
        $("#dropdown").click(function(){
        $("#panel").slideToggle("slow");

    });
    });
</script>
<body>
<% if user_signed_in? %>
    <%= link_to 'Home', controller: addresses_path %>
<% end %>
<div id="dropdown"><%#= current_user.firstName.to_s-%></div>


    <% if user_signed_in? %>
     <div id="panel"><%= link_to 'Edit Account', edit_user_registration_path(current_user)%><br>
       <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
    <% end %>
    </div>
<%= yield %><br><br>


</body>
</html>

